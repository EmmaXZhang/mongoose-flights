<%- include('../partials/header') %>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>FlightNo</th>
      <th>DepartDate</th>
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over movies using forEach -->
    <% flights.forEach(function(f) { %>
    <tr>
      <td><%= f.airline %></td>
      <td><%= f.airport %></td>
      <td><%= f.flightNo %></td>
      <td <% if (new Date(f.departs) < new Date()) { %>
        style="color: red;" <% } %> > <%= f.departs.toLocaleDateString("en-GB")
        %><%=f.departs.toLocaleTimeString()%>
      </td>
      <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
    </tr>
    <% }) %>
    <!-- Close the forEach using EJS here -->
  </tbody>
</table>

<%- include('../partials/footer') %>
